{
  "require": {
    "doctrine/dbal": "4.0",
    "firebase/php-jwt": "^6.11",
    "paragonie/sodium_compat": "^2.1",
    "php-di/php-di": "^7.0",
    "phpmailer/phpmailer": "^6.9",
    "slim/psr7": "^1.7",
    "slim/slim": "4.*",
    "vlucas/phpdotenv": "^5.6",
    "yoomoney/yookassa-sdk-php": "^3.8",
    "zircote/swagger-php": "^4.11"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0"
  }
}
